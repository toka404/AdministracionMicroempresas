@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common

@model IPagedList<Banding.Core.Models.Entities.MySql.Emprendimiento>

@{
    ViewData["Title"] = "Index";
}

<div class="container-xxl hero-header" style="padding-bottom:0px">
    <div class="contenedor-grande">

        <h1>Emprendimientos</h1>

        <p>
            <a class="btn btn-dark" asp-action="Create">Crear</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().NombreEmprendimiento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().DescripcionEmprendimiento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().IdCategoriaNavigation)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreEmprendimiento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DescripcionEmprendimiento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdCategoriaNavigation.NombreCategoria)
                    </td>
                    <td>
                        <a class="btn btn-dark" asp-action="Edit" asp-route-id="@item.IdEmprendimiento">Editar</a> |
                        <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.IdEmprendimiento">Detalles</a> |
                        <a class="btn btn-dark" asp-action="Delete" asp-route-id="@item.IdEmprendimiento">Eliminar</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>

        @Html.PagedListPager((IPagedList)Model, page => 
            Url.Action("Index", new { page = page }), 
            new PagedListRenderOptions {
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" }
        })

    </div>
</div>

<partial name="~/Views/Shared/_NavbarStylePartial.cshtml" />
