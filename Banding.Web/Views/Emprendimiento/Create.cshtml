@model Banding.Core.Models.Entities.MySql.Emprendimiento

@{
    ViewData["Title"] = "Create";
}
<div class="container-xxl hero-header" style="padding-bottom:0px">
    <div class="contenedor-middle">


        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">

                <h1>Crear</h1>
                <br />
                <h4>Emprendimiento</h4>
                <br />

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="IdCategoria" class="control-label"></label>
                        <select asp-for="IdCategoria" class="form-select" asp-items="ViewBag.IdCategoria"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="NombreEmprendimiento" class="control-label"></label>
                        <input asp-for="NombreEmprendimiento" class="form-control" />
                        <span asp-validation-for="NombreEmprendimiento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DescripcionEmprendimiento" class="control-label"></label>
                        <input asp-for="DescripcionEmprendimiento" class="form-control" />
                        <span asp-validation-for="DescripcionEmprendimiento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Logo" class="control-label"></label>
                        <input asp-for="Logo" class="form-control" />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <br />
                        <input type="submit" value="Crear" class="btn btn-dark" />
                    </div>
                </form>
                <br />
                <a class="btn btn-dark" asp-action="Index">Regresar</a>

            </div>
            <div class="col-2"></div>

        </div>


        @section Scripts {
        @{

        await Html.RenderPartialAsync("_ValidationScriptsPartial");

        }
        }



    </div>
</div>

<partial name="~/Views/Shared/_NavbarStylePartial.cshtml" />
