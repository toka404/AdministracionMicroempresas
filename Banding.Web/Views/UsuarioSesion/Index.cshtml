@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common

@model IPagedList<Banding.Core.Models.Entities.MySql.Usuario>

@{
}

<h1>Usuarios</h1>

<p>
    <a class="btn btn-dark" asp-action="Create">Crear</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().IdProvincia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().NombreUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ApellidoUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Celular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().EMail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Contrasena)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdProvincia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApellidoUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contrasena)
            </td>
            <td>
                <a class="btn btn-dark" asp-action="Edit" asp-route-id="@item.IdUsuario">Editar</a> |
                <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.IdUsuario">Detalles</a> |
                <a class="btn btn-dark" asp-action="Delete" asp-route-id="@item.IdUsuario">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

@Html.PagedListPager((IPagedList)Model, page => 
    Url.Action("Index", new { page = page }), 
    new PagedListRenderOptions {
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" }
})