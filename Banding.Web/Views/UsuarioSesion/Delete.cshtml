            </dl>
    
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdUsuario" />
                <input type="submit" value="Delete" class="btn btn-dark" /> |
                <a class="btn btn-dark" asp-action="Index">Regresar</a>
