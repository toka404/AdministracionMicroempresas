@model Banding.Core.Models.Entities.MySql.Roles

@{
    ViewData["Title"] = "Create";
}

<div class="container-xxl hero-header" style="padding-bottom:0px">
    <div class="container">


        <h1>Crear</h1>

        <h4>Roles</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NombreRol" class="control-label"></label>
                        <input asp-for="NombreRol" class="form-control" />
                        <span asp-validation-for="NombreRol" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Regresar</a>
        </div>


    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


