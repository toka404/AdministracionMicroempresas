@model Banding.Core.Models.Entities.MySql.Provincia

@{
    ViewData["Title"] = "Edit";
}

<div class="container-xxl hero-header" style="padding-bottom:0px">
    <div class="container">



        <h1>Editar</h1>

        <h4>Provincia</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdProvincia" />
                    <div class="form-group">
                        <label asp-for="NombreProvincia" class="control-label"></label>
                        <input asp-for="NombreProvincia" class="form-control" />
                        <span asp-validation-for="NombreProvincia" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Regresar</a>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<partial name="~/Views/Shared/_NavbarStylePartial.cshtml" />
