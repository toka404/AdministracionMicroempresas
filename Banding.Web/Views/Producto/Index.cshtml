@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common


@model IPagedList<Banding.Core.Models.Entities.MySql.Producto>

@{
    ViewData["Title"] = "Index";
}

<div class="container-xxl hero-header" style="padding-bottom:0px">
    <div class="container">


        <h1>Productos</h1>

        <p>
            <a class="btn btn-dark" asp-action="Create">Crear</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().NombreProducto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().PrecioFabricacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Foto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Stock)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().FechaCaducidad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().PrecioVenta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Iva)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().StockMinimo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().EmailEnviado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().IdEmprendimientoNavigation)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreProducto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrecioFabricacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Foto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Stock)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaCaducidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrecioVenta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Iva)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StockMinimo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailEnviado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdEmprendimientoNavigation.IdEmprendimiento)
                    </td>
                    <td>
                        <a class="btn btn-dark" asp-action="Edit" asp-route-id="@item.IdProducto">Edit</a> |
                        <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.IdProducto">Details</a> |
                        <a class="btn btn-dark" asp-action="Delete" asp-route-id="@item.IdProducto">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>


        @Html.PagedListPager((IPagedList)Model, page => 
            Url.Action("Index", new { page = page }), 
            new PagedListRenderOptions {
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" }
        })

    </div>
</div>

<partial name="~/Views/Shared/_NavbarStylePartial.cshtml" />
