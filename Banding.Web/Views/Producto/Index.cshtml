@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common


@model IPagedList<Banding.Core.Models.Entities.MySql.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Id_Emprendimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Nombre_Producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Precio_Fabricacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Stock_Minimo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Fecha_Caducidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Precio_Venta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Iva)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Emprendimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio_Fabricacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock_Minimo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Caducidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio_Venta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Iva)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Producto">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_Producto">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_Producto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@Html.PagedListPager((IPagedList)Model, page => 
    Url.Action("Index", new { page = page }), 
    new PagedListRenderOptions {
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" }
})