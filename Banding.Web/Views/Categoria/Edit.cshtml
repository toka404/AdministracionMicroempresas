@model Banding.Core.Models.Entities.MySql.Categoria

@{
    ViewData["Title"] = "Edit";
}


<div class="container-xxl hero-header" style="padding-bottom:0px">
    <div class="contenedor-middle">



        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <h1>Editar</h1>

                <h4>Categoria</h4>
                <hr />

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdCategoria" />
                    <div class="form-group">
                        <label asp-for="NombreCategoria" class="control-label"></label>
                        <input asp-for="NombreCategoria" class="form-control" />
                        <span asp-validation-for="NombreCategoria" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                    <br />
                    <div>
                        <a class="btn btn-dark" asp-action="Index">Regresar</a>
                    </div>

                </form>
            </div>
            <div class="col-2"></div>

        </div>


    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

<partial name="~/Views/Shared/_NavbarStylePartial.cshtml" />
