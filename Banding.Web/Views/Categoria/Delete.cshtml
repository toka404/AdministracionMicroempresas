@model Banding.Core.Models.Entities.MySql.Categoria

@{
    ViewData["Title"] = "Delete";
}


<div class="container-xxl hero-header" style="padding-bottom:0px">
    <div class="contenedor-middle">


        <h1>Eliminar</h1>

        <h3>¿Estás seguro de eliminar la categoría?</h3>
        <div>
            <h4>Categoria</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NombreCategoria)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NombreCategoria)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdCategoria" />
                <input class="btn btn-dark" type="submit" value="Eliminar" class="btn btn-danger" /> |
                <a class="btn btn-dark" asp-action="Index">Regresar</a>
            </form>
        </div>

    </div>
</div>


