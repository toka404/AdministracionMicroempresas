@model Banding.Core.Models.Entities.MySql.Categoria

@{
    ViewData["Title"] = "Create";
}


<div class="container-xxl hero-header" style="padding-bottom:0px">
    <div class="contenedor-middle">


        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">

                <h1>Crear</h1>

                <h4>Categoria</h4>
                <hr />
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NombreCategoria" class="control-label"></label>
                        <input asp-for="NombreCategoria" class="form-control" />
                        <span asp-validation-for="NombreCategoria" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-primary" />
                    </div>
                    <br />

                    <div>
                        <a class="btn btn-dark" asp-action="Index">Regresar</a>
                    </div>
                </form>
            </div>
            <div class="col-2"></div>

        </div>


    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}


